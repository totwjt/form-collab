  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@monorepo-starter/core": "workspace:*",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "tsup": "^7.2.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.0",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
