{
  "name": "@monorepo-starter/vue",
  "version": "0.1.0",
  "description": "Vue plugin for monorepo-starter",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
